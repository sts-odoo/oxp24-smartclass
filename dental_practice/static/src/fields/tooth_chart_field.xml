<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="dental_practice.ToothChartField">
        <ToothChart tooth="toothData" tooltipTemplate="'dental_practice.Tooltip'" toothSelected.bind="toothSelected"/>
    </t>
    <t t-name="dental_practice.Tooltip">
        <div class="o-tooltip">
            <t t-if="data.length === 0">
                <span>No information</span>
            </t>
            <t t-else="">
                <table class="table o-tooltip--string">
                    <thead>
                        <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Date</th>
                        <th scope="col">Position</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="data" t-as="d" t-key="d.id">
                            <tr>
                                <td><span t-esc="d.name"/></td>
                                <td><span t-esc="d.date"/></td>
                                <td><span t-if="d.dental_position" t-esc="d.dental_position"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </div>
    </t>
</templates>