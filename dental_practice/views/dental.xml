<?xml version="1.0" encoding="utf-8"?>
<data>

    <!-- Patient -->
    <record id="view_res_partner_patient_filter" model="ir.ui.view">
        <field name="name">res.partner.select</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Search Partner">
                <field name="name"
                    filter_domain="['|', '|', '|', '|', ('complete_name', 'ilike', self), ('ref', 'ilike', self), ('email', 'ilike', self), ('vat', 'ilike', self), ('company_registry', 'ilike', self)]"/>
                <field name="parent_id" domain="[('is_company', '=', True)]" operator="child_of"/>
                <field name="email" filter_domain="[('email', 'ilike', self)]"/>
                <field name="phone" filter_domain="['|', ('phone', 'ilike', self), ('mobile', 'ilike', self)]"/>
                <field name="category_id" string="Tag" operator="child_of"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Patient" name="type_person" domain="[('is_patient', '=', True)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="dentist" string="Dentist" domain="[]" context="{'group_by' : 'user_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="view_partner_form_dental" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.dental</field>
        <field name="model">res.partner</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Dental Care" name="dental_care">
                    <field name="intervention_ids" widget="tooth_chart"/>
                </page>
            </notebook>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,form</field>
        <field name="context">{
            'default_is_patient': True,
            'search_default_type_person': 1
            }</field>
        <field name="domain">[('is_company', '=', False)]</field>
        <field name="search_view_id" ref="view_res_partner_patient_filter"/>
    </record>

    <!-- Treatment -->
    <record id="product_template_form_view_inherit_dental" model="ir.ui.view">
        <field name="name">product.template.inherit.dental</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="sale.product_template_form_view"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_policy']" position="after">
                <field name="dental_care_type" invisible="type != 'dental'"/>
            </xpath>
        </field>
    </record>
    <record id="view_product_product_select" model="ir.ui.view">
        <field name="name">product.product.select</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <search string="Search Treatment">
                <filter string="Treatments" name="type_treatment" domain="[('type', '=', 'dental')]"/>
            </search>
        </field>
    </record>
    <record id="action_treatment" model="ir.actions.act_window">
        <field name="name">Treatment</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_product_product_select"/>
        <field name="context">{
            'default_type': 'dental',
            'search_default_type_treatment': 1,
            }</field>
    </record>


    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']//form//field[@name='product_id']" position='replace'>
                <field name="product_id" domain="[('type', '=', 'dental')]"/>
                <field name="dental_tooth"/>
                <field name="dental_position"/>
            </xpath>
            <xpath expr="//page[@name='order_lines']//list//field[@name='product_id']" position='replace'>
                <field name="product_id" domain="[('type', '=', 'dental')]"/>
                <field name="dental_tooth"/>
                <field name="dental_position"/>
            </xpath>
        </field>
    </record>

   <record id="action_intervention" model="ir.actions.act_window">
        <field name="name">Intervention</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="sale.sale_order_tree"/>
        <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        <field name="context">{
             'form_view_ref': 'dental_practice.sale_order_form_inherit',
            }</field>
    </record>

    <!-- Menu -->
  <menuitem id="menu_dental" name="Dental Practice" sequence="20" web_icon="dental_practice,static/src/img/dental_practice.png"/>
  <menuitem id="menu_intervention" name="Intervention" parent="menu_dental" sequence="10" action="action_intervention"/>
  <menuitem id="menu_patient" name="Patient" parent="menu_dental" sequence="20" action="action_patient"/>
  <menuitem id="menu_treatment" name="Treatment" parent="menu_dental" sequence="30" action="action_treatment"/>
</data>
